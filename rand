#!/bin/sh

echo "=== Point 2: MAC Address ==="
ip link show eth0 | grep ether

echo -e "\n=== Point 2: DHCP on eth0 ==="
ip addr show eth0 | grep "inet "

echo -e "\n=== Point 3: NTP Status ==="
chronyc tracking | grep -E "Reference|System time|Leap status"

echo -e "\n=== Point 4: DHCP Server ==="
rc-service dnsmasq status
ip addr show eth1 | grep "inet "

echo -e "\n=== Point 5: Static IP eth2 ==="
ip addr show eth2 | grep "inet "

echo -e "\n=== Point 6: IP Forwarding ==="
echo "ip_forward = $(cat /proc/sys/net/ipv4/ip_forward)"

echo -e "\n=== Point 6: NAT Rules ==="
iptables -t nat -L POSTROUTING -n | grep MASQUERADE

echo -e "\n=== Point 6: Forward Rules ==="
iptables -L FORWARD -n | head -15

echo -e "\n=== Point 7: Port Forward Rules ==="
iptables -t nat -L PREROUTING -n | grep 8822 || echo "No SSH forward (192.168.55.100 might be down)"

echo -e "\n=== Point 8: Web Server ==="
rc-service lighttpd status
curl -s http://localhost/ | head -5

echo -e "\n=== All Services ==="
rc-status default
